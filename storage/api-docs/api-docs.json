{
    "openapi": "3.0.0",
    "info": {
        "title": "Flash Sale Checkout API",
        "description": "API for managing flash sale operations with hold system and payment webhooks",
        "contact": {
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Local development server"
        }
    ],
    "paths": {
        "/api/holds": {
            "post": {
                "tags": [
                    "Holds"
                ],
                "summary": "Create a temporary hold for a product",
                "operationId": "9e09d874d1a3d75db29fcaba943057cb",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "product_id",
                                    "qty"
                                ],
                                "properties": {
                                    "product_id": {
                                        "description": "Product ID",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "qty": {
                                        "description": "Quantity to hold",
                                        "type": "integer",
                                        "minimum": 1,
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Hold created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "hold_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "expires_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2024-01-01T12:02:00.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (insufficient stock or other error)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Insufficient stock. Available: 5, Requested: 10"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/orders": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Create an order from an existing hold",
                "operationId": "2123ba58dadb22bd6f2c8081af562230",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "hold_id"
                                ],
                                "properties": {
                                    "hold_id": {
                                        "description": "Hold ID",
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Order created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "order_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "total_amount": {
                                            "type": "string",
                                            "example": "199.98"
                                        },
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "pending",
                                                "paid",
                                                "cancelled"
                                            ],
                                            "example": "pending"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (hold expired, already used, or other error)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Hold has expired"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/payments/webhook": {
            "post": {
                "tags": [
                    "Webhooks"
                ],
                "summary": "Receive webhook from payment gateway",
                "description": "This endpoint is idempotent and out-of-order safe. If webhook arrives before order creation, it will be saved and processed later.",
                "operationId": "4446ab3d89ae76ce851914e4ca1a784c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "idempotency_key",
                                    "order_id",
                                    "status"
                                ],
                                "properties": {
                                    "idempotency_key": {
                                        "description": "Unique key for idempotency",
                                        "type": "string",
                                        "example": "unique-key-123"
                                    },
                                    "order_id": {
                                        "description": "Order ID",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "status": {
                                        "description": "Payment status",
                                        "type": "string",
                                        "enum": [
                                            "paid",
                                            "failed"
                                        ],
                                        "example": "paid"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Webhook processed successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Webhook processed successfully"
                                        },
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "success",
                                                "pending"
                                            ],
                                            "example": "success"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "idempotency_key is required"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Get product information",
                "operationId": "c87fb2e4d617e7b36c712cad358acdb8",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Product ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product information",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Flash Sale Product"
                                        },
                                        "price": {
                                            "type": "string",
                                            "example": "99.99"
                                        },
                                        "available_stock": {
                                            "type": "integer",
                                            "example": 100
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Product not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Product not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Product management endpoints"
        },
        {
            "name": "Holds",
            "description": "Temporary product hold management"
        },
        {
            "name": "Orders",
            "description": "Order management endpoints"
        },
        {
            "name": "Webhooks",
            "description": "Payment webhook endpoints"
        }
    ]
}
